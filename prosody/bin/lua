#!/bin/bash -e
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )
LIBS="${DIR}/sasl2/lib"
LIBS="$LIBS:$(echo ${DIR}/lib/*-linux-gnu*)"
LIBS="$LIBS:$(echo ${DIR}/usr/lib/*-linux-gnu*)"
export LD_LIBRARY_PATH=$LIBS
${DIR}/lib/*-linux*/ld-*.so.* --library-path $LIBS ${DIR}/usr/bin/lua5.4 "$@"
